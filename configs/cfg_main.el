;; Other configuration(setq inhibit-startup-message t) ;; no splash screen(prefer-coding-system 'utf-8) ;; use UTF-8(global-font-lock-mode 1) ;; make pretty (setq-default transient-mark-mode t) ;; shows current selected region(setq-default indent-tabs-mode nil) ;; indent via spaces not tabs(setq frame-title-format '(buffer-file-name "%f" ("%b"))) ;; titlebar = buffer unless filename(show-paren-mode 1) ;; show paired parenthasis;(set-default-font "-adobe-courier-bold-o-normal--18-180-75-75-m-110-iso8859-13");; TAB => 4*'\b'(setq default-tab-width 4);; turn off tool bar, and menu bar(if (fboundp 'tool-bar-mode) (tool-bar-mode -1));; Make sure we have font-lock to start with(require 'font-lock)